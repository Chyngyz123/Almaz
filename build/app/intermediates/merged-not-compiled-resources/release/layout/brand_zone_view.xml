<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bzv_issuer_image"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:contentDescription="@string/bzv_issuer_image_description"
        android:maxHeight="@dimen/brand_zone_max_height" />

    <View
        style="@style/Divider.Vertical"
        android:layout_margin="@dimen/brand_zone_horizontal_margin" />

    <ImageView
        android:id="@+id/bzv_payment_system_image"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:contentDescription="@string/bzv_payment_system_image_description"
        android:maxHeight="@dimen/brand_zone_max_height" />

</merge>
